<%= render :partial => "search/nav" , :locals => { :section => "search-tags" }%>
<div class="container">
  <% if @tags.present? %>
      <h2> Results for <%= @search_criteria.query %></h2>
      <p> <strong> Searched notes that contain the tag</strong></p>
      <hr>

      <div class="row">
        <% @tags.each_with_index do |tag| %>
        <div class="col-xs-3 col-sm-3 col-md-3 clearfix" style="min-height: 50px; text-align: center;">
          <% if tag.find_node_by_title(tag.title).main_image %>
            <a class="img" <% if @widget %>target="_blank"<% end %> href="<%= tag.path %>"><img src="<%= tag.find_node_by_title(tag.title).main_image.path %>" alt="<%= tag.title %>" style="width:100%;" /></a>
          <% end %>
          <h3><a href="<%= tag.path %>"><%= tag.title %></a></h3>
          <a class="btn btn-default" style="float: right; margin-left: 1px;" href="<%= tag.path %>">Read more</a>
        </div>
        <% end %>
      </div>
  <% else %>
    <h4>
      No results found for <%= params[:query] %> :-(
      <p> Searched notes that contain the tag</p>
      </br>
      Try searching <a href="/search">for another topic</a> or looking for our items tagged with <a href="/tag/<%= params[:query] %>"><%= params[:query] %></a>
    </h4>
  <% end %>
</div>

<%= will_paginate @tags, :renderer => BootstrapPagination::Rails unless @unpaginated %>
